<?xml version="1.0" encoding="utf-8"?>


    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
          android:background="@drawable/background" 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/serviceinvoiceno"
                android:textColor="@color/grey"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edittxt_serviceinvoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false" >
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/partyname"
                android:textColor="@color/grey"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edittxt_partyname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false" >
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/date"
                android:textColor="@color/grey"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edittxt_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false" >
            </EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/grey"
                android:orientation="horizontal"
                android:weightSum="5" >

                <TextView
                    android:id="@+id/position1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey"
                    android:gravity="center"
                     android:layout_weight="1"
                    android:text="@string/productcode"
                    android:textColor="@color/custom_blue" />

                <TextView
                    android:id="@+id/position2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey"
                    android:gravity="center"
                     android:layout_weight="1"
                    android:text="@string/productname"
                    android:textColor="@color/custom_blue"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/position3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey"
                    android:gravity="center"
                     android:layout_weight="1"
                    android:text="@string/sellingprice"
                    android:textColor="@color/custom_blue"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/position4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey"
                    android:gravity="center"
                    android:maxLines="3"
                     android:layout_weight="1"
                    android:text="@string/remainquantity"
                    android:textColor="@color/custom_blue"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/position5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey"
                    android:gravity="center"
                     android:layout_weight="1"
                    android:text="@string/saleamount"
                    android:textColor="@color/custom_blue" />

                <TextView
                    android:id="@+id/position6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/saletype"
                    android:textColor="@color/custom_blue" />

                <TextView
                    android:id="@+id/position7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey"
                    android:gravity="center"
                     android:layout_weight="1"
                    android:text="@string/quantity"
                    android:textColor="@color/custom_blue" />

                <TextView
                    android:id="@+id/position8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey"
                    android:gravity="center"
                     android:layout_weight="1"
                    android:text="@string/delete"
                    android:textColor="@color/custom_blue" />
            </LinearLayout>
            

            <ListView
                android:id="@android:id/list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:cacheColorHint="#00000000"
                android:listSelector="@drawable/list_selector"
                android:choiceMode="singleChoice" >
            </ListView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2" >

                <Button
                    android:id="@+id/deleteitems"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector"
                    android:text="@string/deleteitems"
                    android:textColor="@color/grey" >
                </Button>

                <Button
                    android:id="@+id/save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector"
                    android:text="@string/save"
                    android:textColor="@color/grey" >
                </Button>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

