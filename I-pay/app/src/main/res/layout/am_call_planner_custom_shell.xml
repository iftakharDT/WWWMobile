<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    android:background="@drawable/list_row_selector"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:weightSum="2" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".5"
                android:text="FIRM NAME\t:"
                android:textColor="@color/custom_blue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/firm_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Firm Name"
                android:textColor="@color/custom_blue"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/cb_callplan"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight=".1"
                android:focusable="false"
                android:focusableInTouchMode="false" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="2" >

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="left"
                android:text="NAME\t\t\t:\t"
                android:textColor="@color/custom_blue" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left"
                android:text="text1"
                android:textColor="@color/custom_blue" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="2" >

            <TextView
                android:id="@+id/mobile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="MOBILE\t\t:"
                android:textColor="@color/custom_blue" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="text3"
                android:textColor="@color/custom_blue" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="2" >

            <TextView
                android:id="@+id/state"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="left"
                android:text="STATE\t\t:"
                android:textColor="@color/custom_blue" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="text3"
                android:textColor="@color/custom_blue" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="2" >

            <TextView
                android:id="@+id/city"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="left"
                android:text="CITY\t\t\t:\t"
                android:textColor="@color/custom_blue" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="text4"
                android:textColor="@color/custom_blue" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="2" >

            <TextView
                android:id="@+id/area"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="left"
                android:text="AREA\t\t\t:\t"
                android:textColor="@color/custom_blue" />

            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left"
                android:text="text5"
                android:textColor="@color/custom_blue" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="2" >

            <TextView
                android:id="@+id/area01"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="left"
                android:text="Last\nVisited"
                android:textColor="@color/custom_blue" />

            <TextView
                android:id="@+id/text6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left"
                android:text="text6"
                android:textColor="@color/custom_blue" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="2" >

            <TextView
                android:id="@+id/area02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="left"
                android:text="No Of Calls Last 30Days"
                android:textColor="@color/custom_blue" />

            <TextView
                android:id="@+id/text7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left"
                android:text="text7"
                android:textColor="@color/custom_blue" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow208"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2" >

            <TextView
                android:id="@+id/area4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Bussiness\n Trend"
                android:textColor="@color/custom_blue" />

            <TextView
                android:id="@+id/text8"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="left"
                android:textColor="@color/custom_blue" />
        </TableRow>
    </TableLayout>

</LinearLayout>