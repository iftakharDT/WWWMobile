<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >
    
      

            <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >
                      <TextView
                style="@style/TextTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/country" />

            <Spinner
                android:id="@+id/spinner_contry"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" />

            <TextView
                style="@style/TextTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/zone" />

            <Spinner
                android:id="@+id/spinner_zone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" />

            <TextView
                style="@style/TextTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/state" />

            <Spinner
                android:id="@+id/spinner_state"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" />
                    <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/city"
               style="@style/TextTheme" />

            <Spinner
                android:id="@+id/cityspinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" />
            
             <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/area"
               style="@style/TextTheme" />

            <Spinner
                android:id="@+id/areaspinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" />
            
            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Type"
               style="@style/TextTheme" />

            <Spinner
                android:id="@+id/typespinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" />
            
             <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/customer"
               style="@style/TextTheme" />

            <Spinner
                android:id="@+id/customer_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" />

            <TextView
                android:id="@+id/tv_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/mobilenumber" />
            
              <EditText
                android:id="@+id/et_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bluelight"
                android:hint="@string/mobilenumber"
                android:ems="10" >

            </EditText>
             <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:textColor="@color/white"
                android:text="@string/address" />
            
              <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bluelight"
                android:hint="@string/address"
                android:ems="10" >

            </EditText>
             <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:textColor="@color/white"
                 
                android:text="@string/emailid" />
            
              <EditText
                  android:id="@+id/et_email"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:ems="10"
                  android:hint="@string/emailid"
                  android:textColor="@color/bluelight" >

            </EditText>
             <TextView
                android:id="@+id/tv_bday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:textColor="@color/white"
                android:text="@string/birthday" />
            
              <EditText
                android:id="@+id/et_bday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bluelight"
                android:hint="@string/birthday"
                android:ems="10" >

            </EditText>
             <TextView
                android:id="@+id/tv_abc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:textColor="@color/white"
                android:text="ABC" />
            
              <EditText
                android:id="@+id/et_abc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bluelight"
                android:hint="ABC"
                android:ems="10" >

            </EditText>
             <TextView
                android:id="@+id/tv_avg_call_peryear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:textColor="@color/white"
                android:text="AVG Call per year" />
            
              <EditText
                android:id="@+id/et_avg_call_peryear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bluelight"
                android:hint="AVG Call per year"
                android:ems="10" >

            </EditText>
             <TextView
                android:id="@+id/tv_last_call_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:textColor="@color/white"
                android:text="Last Call Date" />
            
              <EditText
                android:id="@+id/et_last_call_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bluelight"
                android:hint="Last Call Date"
                android:ems="10" >
                  </EditText>
                
                 <TextView
                android:id="@+id/tv_cus_value_pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:textColor="@color/white"
                android:text="Customer Value PM" />
            
              <EditText
                android:id="@+id/et_cus_value_pm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bluelight"
                android:hint="Customer Value PM"
                android:ems="10" >
                  </EditText>
                
                <TextView
                android:id="@+id/tv_cus_value_tm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:textColor="@color/white"
                 
                android:text="Customer Value TM" />
            
              <EditText
                android:id="@+id/et_cus_value_tm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bluelight"
                android:hint="Customer Value TM"
                android:ems="10" >

            </EditText>
            
              
<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:visibility="gone" >

    <Button
        android:id="@+id/date_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Date From\t" />

          <EditText
              android:id="@+id/et_date_from"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:editable="false"
              android:focusable="false"
              android:clickable="false"
              android:ems="10" />
            
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:visibility="gone">

          <Button
              android:id="@+id/date_to"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="Date To \t \t" />

          <EditText
              android:id="@+id/et_date_to"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:editable="false"
              android:focusable="false"
              android:clickable="false"
              android:ems="10" >

          </EditText>
            
        </LinearLayout>
          <TextView
                style="@style/TextTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="@string/segment" 
                 android:id="@+id/tv_spinner_segment"/>

            <Spinner
                android:id="@+id/spinner_segment" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp" />

            <TextView
                style="@style/TextTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="@string/oe"
                android:id="@+id/tv_spinner_oe" />

            <Spinner
                android:id="@+id/spinner_oe" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp" />

            <TextView
                style="@style/TextTheme" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="@string/application"
                 android:id="@+id/tv_spinner_application" />

            <Spinner
                android:id="@+id/spinner_application"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" />

            <TextView
                style="@style/TextTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="@string/partno" />
            <EditText
                android:id="@+id/mannual_part_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:focusable="false"
                android:hint="Part No" >
            </EditText>

            <Spinner
                android:id="@+id/spinner_partno"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_margin="2dp" />

            <Button
                style="@style/ButtonTheme"
                android:id="@+id/get_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="2dp"
                android:text="@string/get" />
                    
                </LinearLayout>
            </ScrollView>

           

</LinearLayout>
