<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_row_selector"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_marginLeft="3dp"
         android:layout_marginRight="3dp" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_weight="3">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_weight=".5"
                android:text="FIRM NAME\t:" />
            
           <TextView android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/firm_name"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:gravity="left"
            android:layout_weight="2"
            android:text="Firm Name"
            />

           
            
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:weightSum="2">
           
            
            <TextView android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/name"
            android:textColor="@color/custom_blue"
           
            android:gravity="left"
           
            android:text="NAME\t\t\t:\t"
            />
           
           
        <TextView android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/text1"
            android:textColor="@color/custom_blue"
            android:gravity="left"
            
            android:text="text1"
            />
        
       
            
        </TableRow>
        
         <TableRow
            android:id="@+id/tableRow23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:weightSum="2">
           
          <TextView
             android:id="@+id/mobile"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             
             android:gravity="left"
             android:text="MOBILE\t\t:"
             android:textColor="@color/custom_blue" />
          <TextView
             android:id="@+id/text2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             
             android:gravity="left"
             android:text="text3"
             android:textColor="@color/custom_blue" />
            
        </TableRow>
        
        
        
        
         <TableRow
            android:id="@+id/tableRow13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:weightSum="2">
           
          <TextView
             android:id="@+id/state"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:gravity="left"
             android:text="STATE\t\t\t:\t"
             android:textColor="@color/custom_blue" />
          <TextView
             android:id="@+id/text3"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             
             android:gravity="left"
             android:text="text3"
             android:textColor="@color/custom_blue" />
            
        </TableRow>
        

        <TableRow
            android:id="@+id/tableRow33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:weightSum="2">
           
          <TextView android:layout_width="0dp"
            android:layout_height="match_parent"
           
            android:id="@+id/city"
            android:textColor="@color/custom_blue"
            android:gravity="left"
            android:text="CITY\t\t\t:\t"
            />
        
         <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
     
            android:id="@+id/text4"
            android:textColor="@color/custom_blue"
            android:gravity="left"
            android:text="text4"
            />
         
         
            
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:weightSum="2">
           
           <TextView android:layout_width="0dp"
            android:layout_height="match_parent"
            
            android:id="@+id/area"
            android:textColor="@color/custom_blue"
            android:gravity="left"
            android:text="AREA\t\t\t:\t"
            />
         
           <TextView android:layout_width="wrap_content"
            android:layout_height="match_parent"
          
            android:id="@+id/text5"
            android:textColor="@color/custom_blue"
            android:gravity="left"
            android:text="text5"
            />
            
        </TableRow>
        
        
        
    </TableLayout>
    
     <TextView android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/planned"
            android:textColor="@color/custom_blue"
            android:layout_weight=".5"
            
            android:gravity="left"
        
        
           
            />

</LinearLayout>
