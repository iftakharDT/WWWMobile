<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:background="@drawable/list_row_selector"
    android:orientation="vertical"
    app:cardCornerRadius="2dp"
    app:contentPadding="10dp"
    android:layout_marginTop="5dp"
    android:elevation="4dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <TextView
        android:id="@+id/tv_firm_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Firm Name"
        android:textColor="@color/colorTextDark"
        android:singleLine="true"
        android:textSize="22sp"
        android:textStyle="bold" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_person"
                    />

                <TextView
                    android:id="@+id/tv_person"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorTextDark"
                    android:layout_marginLeft="5dp"
                    android:textSize="18dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_mobile"
                    />

                <TextView
                    android:id="@+id/tv_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="99999999999"
                    android:textColor="@color/colorTextDark"
                    android:layout_marginLeft="5dp"
                    android:textSize="18dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_location_marker_person"
                    />

                <TextView
                     android:id="@+id/tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City"
                    android:textColor="@color/colorTextDark"
                    android:textSize="18dp"
                    android:layout_marginLeft="5dp"
                    />

                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/distance"
                    android:textColor="@color/green"
                    android:textSize="18dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_location_marker"
                    />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textColor="@color/colorTextDark"
                    android:textSize="18dp"
                    android:layout_marginLeft="5dp"
                    />

            </LinearLayout>




        </LinearLayout>


    </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <ImageView
                android:id="@+id/iv_planned_call"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/call_planner_icon_96"
                android:layout_gravity="center|top"
                android:tint="@color/primary"

                />

            <ImageView
                android:id="@+id/iv_start_call"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_call_in_progress"
                />

            <ImageView
                android:id="@+id/iv_end_call"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_yes"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"

                />

        </LinearLayout>



    </LinearLayout>



