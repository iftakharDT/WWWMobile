            android:layout_height="70dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/lens_black_18dp"
            android:drawableTint="#006064"
