<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">


    <TextView
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/dealersalemanualorder"
        android:textColor="@color/grey"

        android:textStyle="bold" />

    <AutoCompleteTextView
        android:id="@+id/partno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:ems="10"
        android:hint="search product code"
        android:inputType="text"
        android:maxLines="1"
        android:textColor="@color/custom_blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5">

        <LinearLayout
            android:id="@+id/tableview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:background="@color/grey"
            android:orientation="horizontal"
            android:weightSum="6">

            <TextView
                android:id="@+id/position12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/grey"
                android:gravity="left"
                android:text="@string/productname"
                android:textColor="@color/custom_blue" />

            <TextView
                android:id="@+id/position13"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:background="@color/grey"
                android:gravity="left"
                android:text="@string/pendingorder"
                android:textColor="@color/custom_blue" />

            <TextView
                android:id="@+id/position2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"

                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/git"
                android:textColor="@color/custom_blue" />

            <TextView
                android:id="@+id/position14"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_weight="1.5"
                android:background="@color/grey"
                android:gravity="center"
                android:text="@string/inventry"
                android:textColor="@color/custom_blue" />

            <TextView
                android:id="@+id/position3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_weight="1.5"
                android:background="@color/grey"
                android:gravity="center"
                android:text="@string/quantity"
                android:textColor="@color/custom_blue" />

        </LinearLayout>

        <ListView
            android:id="@+id/listView1"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_weight="3"
            android:cacheColorHint="#00000000"></ListView>


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/txtview8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/totalamount"
                android:textColor="@color/grey"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtview_totalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/grey"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:layout_margin="5dp">

            <TextView
                android:id="@+id/txtview9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/discount"
                android:textColor="@color/grey"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtview_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/grey"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:layout_margin="5dp">

            <TextView
                android:id="@+id/txtview10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/netamount"
                android:textColor="@color/grey"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtview_netamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/grey"
                android:textSize="18sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layoutb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/selector"
                android:text="@string/placeorder"
                android:textColor="@color/grey"></Button>

            <Button
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/selector"
                android:text="@string/cancel"
                android:textColor="@color/grey"></Button>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
