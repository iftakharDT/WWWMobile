<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#00FF00" />
            <stroke
                android:width="1dp"
                android:color="#00FF00" />

        </shape>
    </item>

     <item android:state_pressed="false">
        <shape>
            <gradient
                android:startColor="#47B224"
                android:endColor="#47B224"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#47B224" />

        </shape>
    </item>
</selector>