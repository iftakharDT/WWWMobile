<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#FF99FF" />
            <stroke
                android:width="1dp"
                android:color="#FF99FF" />

        </shape>
    </item>

     <item android:state_pressed="false">
        <shape>
            <gradient
                android:startColor="#A352CC"
                android:endColor="#A352CC"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#A352CC" />

        </shape>
    </item>
</selector>